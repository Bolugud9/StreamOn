<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Netflix</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Netflix.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-transparent   max-w-75  mb-3">
            <div class=" container max-w-50 d-flex flex-row">
                <a class="home navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Stream-On</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="nav flex-grow-1 navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Pricing</a>
                        </li>
                    </ul>
                    <ul class=" navbar-nav gap-2 d-flex flex-row list-group list-unstyled">
                        <li>
                            <a class="btn btn-danger login-btn" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        </li>

                        <li>
                            <a class="btn btn-light" asp-area="" asp-controller="Account" asp-action="Registration">Register</a>
                        </li>
                    </ul>
                </div>
            </div>

        </nav>
    </header>
    <div class="container mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="py-3 my-4 text-light" >
        <div class="container">
            <ul class="nav justify-content-center border-bottom pb-3 mb-3">
                <li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">Home</a></li>
                <li class="nav-item" ><a asp-area="" asp-controller="Account" asp-action="PublisherRegistration" class="nav-link px-2 text-body-secondary"> A publisher?<b class="red">(Click here) </b></a></li>
                @*<li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">Features</a></li>*@
                <li class="nav-item"><a href="#pricing" class="nav-link px-2 text-body-secondary">Pricing</a></li>
                @*<li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">FAQs</a></li>*@
                <li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">About</a></li>
            </ul>
            <p class="text-center text-body-secondary">&copy; 2023 Company, Inc</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Netflix</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Netflix.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-transparent border-bottom   max-w-75  mb-3">
            <div class=" container max-w-50 d-flex flex-row">
                <a class="home navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Stream-On</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="nav flex-grow-1 navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                    </ul>
                    <ul class=" navbar-nav gap-2 d-flex flex-row list-group list-unstyled">
                        <li>
                            <a class="btn btn-light" asp-area="" asp-controller="Home" asp-action="LogOut">Log-Out</a>
                        </li>
                    </ul>
                </div>
            </div>

        </nav>
    </header>
    <div class="container mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


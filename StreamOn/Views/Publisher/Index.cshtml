@model IEnumerable<Videos.Models.Movie>

@{
    Layout = "~/Views/Shared/UserLoginLayout.cshtml";
    ViewData["Title"] = "Publisher";
}

<div class="publisher-container">
    <a class="btn btn-danger" asp-action="Upload" asp-controller="Publisher">Upload</a>

    @if (Model.Count() > 0)
        {
            <table>
                <thead>
                    <tr>
                        <th>NAME</th>
                        <th>ID</th>
                        <th>RATINGS</th>
                        <th>VIEWS</th>
                        <th>APPROVED</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movie in Model)
                    {
                        <tr>
                            <td>@movie.MovieName</td>
                            <td>@movie.MovieId</td>
                            <td>@(movie.rating)%</td>
                            <td>@movie.views</td>
                            <td>@movie.approved</td>
                            <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Publisher" asp-route-movieId="@movie.MovieId">Delete</a></td>
                        </tr>
                        }
                </tbody>
            </table>
     }

</div>